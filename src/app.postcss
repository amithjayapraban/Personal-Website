:root {
  --primary: #1A1B22;

  --fontcolor: white;

  --display: unset;
  --mode: "light";

  --link: rgba(0, 0, 0, 0.7);
}
* {
  -webkit-font-smoothing: antialiased;
}
body {
  margin: 0;
  background: var(--primary);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
